{
  "name": "humanpp",
  "displayName": "Human++",
  "description": "A Base24 color scheme for the post-artisanal coding era. Code is cheap. Intent is scarce.",
  "version": "1.0.0",
  "publisher": "fielding",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fielding/human-plus-plus"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "theme",
    "dark theme",
    "base24",
    "syntax highlighting",
    "human intent",
    "code review"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Human++",
        "uiTheme": "vs-dark",
        "path": "./themes/humanpp.json"
      }
    ],
    "commands": [
      {
        "command": "humanpp.toggle",
        "title": "Human++: Toggle Marker Highlighting"
      },
      {
        "command": "humanpp.refresh",
        "title": "Human++: Refresh Marker Decorations"
      }
    ],
    "configuration": {
      "title": "Human++",
      "properties": {
        "humanpp.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Human++ marker highlighting"
        },
        "humanpp.debounceMs": {
          "type": "number",
          "default": 200,
          "minimum": 50,
          "maximum": 1000,
          "description": "Debounce delay in milliseconds for rescanning on edit"
        },
        "humanpp.markers.intervention.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable !! (intervention/attention) marker"
        },
        "humanpp.markers.uncertainty.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable ?? (uncertainty/verify) marker"
        },
        "humanpp.markers.directive.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable >> (directive/decision) marker"
        },
        "humanpp.diagnostics.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline diagnostic badges (errors, warnings, etc.)"
        },
        "humanpp.diagnostics.error.enable": {
          "type": "boolean",
          "default": true,
          "description": "Show error diagnostics inline"
        },
        "humanpp.diagnostics.warning.enable": {
          "type": "boolean",
          "default": true,
          "description": "Show warning diagnostics inline"
        },
        "humanpp.diagnostics.info.enable": {
          "type": "boolean",
          "default": true,
          "description": "Show info diagnostics inline"
        },
        "humanpp.diagnostics.hint.enable": {
          "type": "boolean",
          "default": false,
          "description": "Show hint diagnostics inline"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  }
}
