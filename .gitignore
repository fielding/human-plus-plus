# Generated outputs (built from palette.toml)
dist/
site/data/
site/index.html

# Keep site/assets/ — logos and images are source files

# Build cache
.palette-cache.json

# Python
__pycache__/
*.pyc
*.pyo
*.egg-info/
build/
.venv/
venv/

# Node.js (for VS Code extension)
node_modules/
out/
*.vsix

# Editor/IDE
.vscode/
.idea/
*.swp
*.swo
*~

# macOS
.DS_Store

# Test/dev directories
testbed/

# Lock files are tracked for reproducible builds
# package-lock.json
