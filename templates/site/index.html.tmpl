    /* highlight.js Human++ theme - matches VS Code token mappings */
    .hljs { background: var(--base00); color: var(--base05); }
    .hljs-comment, .hljs-quote { color: var(--base03); font-style: italic; }
    .hljs-keyword, .hljs-selector-tag { color: var(--base10); }
    .hljs-string, .hljs-template-string { color: var(--base17); }
    .hljs-title, .hljs-title.function_, .hljs-function { color: var(--base15); }
    .hljs-type, .hljs-built_in, .hljs-class { color: var(--base14); }
    .hljs-number, .hljs-literal, .hljs-boolean { color: var(--base12); }
    .hljs-variable, .hljs-template-variable { color: var(--base05); }
    .hljs-params { color: var(--base16); font-style: italic; }
    .hljs-attr { color: var(--base14); font-style: italic; }
    .hljs-attribute { color: var(--base14); }
    .hljs-symbol, .hljs-bullet { color: var(--base11); }
    .hljs-subst { color: var(--base05); }
    .hljs-section { color: var(--base10); font-weight: bold; }
    .hljs-selector-class { color: var(--base13); }
    .hljs-selector-id { color: var(--base11); }
    .hljs-property { color: var(--base05); }
    .hljs-meta, .hljs-meta .hljs-keyword { color: var(--base11); }
    .hljs-emphasis { font-style: italic; color: var(--base15); }
    .hljs-strong { font-weight: bold; color: var(--base15); }
    .hljs-link { color: var(--base17); text-decoration: underline; }
    .hljs-addition { color: var(--base13); background-color: rgba(4, 179, 114, 0.1); }
    .hljs-deletion { color: var(--base10); background-color: rgba(231, 52, 156, 0.1); }

    /* Human++ marker highlighting */
    .hljs-comment.humanpp-attention {
      color: var(--base00); background: var(--base0F);
      padding: 2px 6px; border-radius: 4px; font-weight: bold; font-style: normal;
    }
    .hljs-comment.humanpp-uncertainty {
      color: var(--base07); background: var(--base0E);
      padding: 2px 6px; border-radius: 4px; font-weight: bold; font-style: normal;
    }
    .hljs-comment.humanpp-reference {
      color: var(--base00); background: var(--base0C);
      padding: 2px 6px; border-radius: 4px; font-weight: bold; font-style: normal;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', sans-serif;
      background: var(--base00); color: var(--base05); line-height: 1.6;
    }

    .container { max-width: 1200px; margin: 0 auto; padding: 0 24px; }

    /* Hero */
    .hero {
      min-height: 90vh; display: flex; flex-direction: column;
      justify-content: center; padding: 80px 0; position: relative; overflow: hidden;
    }
    .hero::before {
      content: ''; position: absolute; top: 20%; right: -10%;
      width: 600px; height: 600px;
      background: radial-gradient(circle, var(--base0E) 0%, transparent 70%);
      opacity: 0.08; pointer-events: none;
    }
    .hero::after {
      content: ''; position: absolute; bottom: 10%; left: -5%;
      width: 400px; height: 400px;
