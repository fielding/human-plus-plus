    // Load palette from generated JSON and set CSS variables
    let palette = null;

    async function loadPalette() {
      try {
        const response = await fetch('data/palette.json');
        const data = await response.json();
        palette = data;

        // Set CSS custom properties from palette
        const root = document.documentElement;
        for (const [slot, hex] of Object.entries(data.colors)) {
