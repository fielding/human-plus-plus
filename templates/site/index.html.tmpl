    .marker-card.attention:hover .marker-desc { color: var(--base00); }
    .marker-card.uncertainty:hover { background: var(--base0E); border-color: var(--base0E); }
    .marker-card.uncertainty:hover .marker-symbol,
    .marker-card.uncertainty:hover .marker-name,
    .marker-card.uncertainty:hover .marker-desc { color: var(--base07); }
    .marker-card.reference:hover { background: var(--base0C); border-color: var(--base0C); }
    .marker-card.reference:hover .marker-symbol,
    .marker-card.reference:hover .marker-name,
    .marker-card.reference:hover .marker-desc { color: var(--base00); }

    .marker-symbol { font-size: 48px; font-weight: 700; font-family: 'SF Mono', 'Fira Code', monospace; margin-bottom: 12px; transition: color 0.2s; }
    .marker-card.attention .marker-symbol { color: var(--base0F); }
    .marker-card.uncertainty .marker-symbol { color: var(--base0E); }
    .marker-card.reference .marker-symbol { color: var(--base0C); }
    .marker-name { font-size: 18px; color: var(--base07); margin-bottom: 8px; transition: color 0.2s; }
    .marker-desc { font-size: 14px; color: var(--base04); transition: color 0.2s; }

    /* Code preview for markers */
    .code-preview {
      background: var(--base00); border: 1px solid var(--base02); border-radius: 12px;
      overflow: hidden;
    }
    .marker-badge-attention { background: var(--base0F); color: var(--base00); padding: 2px 6px; border-radius: 4px; font-weight: bold; }
    .marker-badge-uncertainty { background: var(--base0E); color: var(--base07); padding: 2px 6px; border-radius: 4px; font-weight: bold; }
    .marker-badge-reference { background: var(--base0C); color: var(--base00); padding: 2px 6px; border-radius: 4px; font-weight: bold; }

    /* Palette */
    .palette-section {
      background: var(--base01);
      border-top: 1px solid var(--base02); border-bottom: 1px solid var(--base02);
    }
    .palette-row { margin-bottom: 48px; }
    .palette-row:last-child { margin-bottom: 0; }
    .palette-label {
      font-size: 11px; text-transform: uppercase; letter-spacing: 2px;
      color: var(--base04); margin-bottom: 16px;
    }
    .swatches { display: grid; grid-template-columns: repeat(8, 1fr); gap: 8px; }
    .swatch {
      aspect-ratio: 1; border-radius: 12px;
      display: flex; flex-direction: column; align-items: center; justify-content: center;
      font-size: 11px; cursor: pointer; transition: transform 0.15s, box-shadow 0.15s;
      position: relative;
    }
    .swatch:hover { transform: scale(1.08); box-shadow: 0 8px 32px rgba(0,0,0,0.4); z-index: 10; }
    .swatch-id { font-size: 14px; font-weight: 700; margin-bottom: 4px; }
    .swatch-hex { font-size: 10px; font-family: 'SF Mono', 'Fira Code', monospace; opacity: 0.8; }
    .swatch-role { font-size: 8px; opacity: 0.6; margin-top: 4px; text-align: center; padding: 0 4px; }

    /* Install */
    .install-code {
      background: var(--base00); border: 1px solid var(--base02); border-radius: 12px;
      padding: 24px; font-family: 'SF Mono', 'Fira Code', monospace; font-size: 14px;
